{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "rootDir": "./",
        "jsx": "react-jsx",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@foo/*": [
                "./foo/*"
            ]
        },
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "./src/**/*",
        "./bin/**/*",
        "./foo/**/*"
    ]
}